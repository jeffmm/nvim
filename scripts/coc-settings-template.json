{
  // suggestions
  "suggest.completionItemKindLabels": {
    "text": "t",
    "method": "m",
    "function": ""
  },

  // diagnostics
  "diagnostic.errorSign": " ",
  "diagnostic.warningSign": " ",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": " ",

  // list
  "list.indicator": ">",
  "list.selectedSignText": " ",

  // autoformat
  "[css][markdown][javascript][graphql][html][yaml][json][python][java][go]": {
    "coc.preferences.formatOnSave": true
  },
  "coc.preferences.willSaveHandlerTimeout": 1000,
  // python config - turn pyright type checking off, but lint with mypy and flake8
  "python.pythonPath": "__PYTHON3__",
  "python.analysis.typeCheckingMode": "off",
  "python.linting.lintOnSave": true,
  "python.linting.enabled": true,
  "python.linting.mypyEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "__FLAKE8__",
  "python.linting.flake8Args": [
    "--exclude=.git,__pycache__,data,docs",
    "--max-line-length=100",
    "--max-complexity=10",
    "--ignore=D203,E203,W503"
  ],
  "python.linting.pydocstyleEnabled": true,
  "python.linting.pydocstyleArgs": ["--convention=google"],
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "__BLACK__",
  "python.formatting.blackArgs": ["--line-length=100", "--target-version=py36"],
  "pyright.organizeimports.provider": "isort",
  "python.sortImports.path": "__ISORT__",
  "python.sortImports.args": ["--profile", "black"],
  // snippets
  "snippets.ultisnips.directories": ["~/.config/nvim/snips", "UltiSnips"],
  "snippets.userSnippetsDirectory": "~/.config/nvim/snips",

  // explorer
  "explorer.width": 30,
  "explorer.previewAction.onHover": "content",
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "vim-devicons",
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },

  //coc-emoji
  "coc.source.emoji.filetypes": ["markdown"]
}
